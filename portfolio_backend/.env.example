# Django Environment Configuration
# Copy this file to .env and update the values for your environment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db
# Or individual settings:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=portfolio_db
# DB_USER=portfolio_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-different-from-django-secret
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)

# Email Configuration (for contact forms and newsletters)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=/var/www/portfolio/media
STATIC_ROOT=/var/www/portfolio/static

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/portfolio/django.log

# Third-party Services
# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Social Media
GITHUB_URL=https://github.com/yourusername
LINKEDIN_URL=https://linkedin.com/in/yourusername
TWITTER_URL=https://twitter.com/yourusername

# API Keys (if needed)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_PUBLIC_KEY=your-stripe-public-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_STORAGE=local  # or 's3', 'gcs'
BACKUP_RETENTION_DAYS=30

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here

# Performance
USE_REDIS_CACHE=True
CACHE_TIMEOUT=300  # seconds
