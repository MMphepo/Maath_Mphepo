# Django Environment Configuration for Render Deployment
# Copy this file to .env and update the values for your environment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database Configuration
# For development (SQLite) - comment out for production
# DATABASE_URL=sqlite:///db.sqlite3

# For production on Render (PostgreSQL) - Render will provide this automatically
# DATABASE_URL=postgresql://username:password@host:port/database

# CORS Settings - Update with your Vercel frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# Render automatically sets RENDER_EXTERNAL_HOSTNAME
# RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# Email Configuration (optional - for contact forms)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com

# Optional: Additional configurations for advanced features
# SENTRY_DSN=https://your-sentry-dsn-here
